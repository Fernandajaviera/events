<p id="notice"><%= notice %></p>

<h1>Concerts</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Assistants</th>
      <th>Duration (days)</th>
      <th>Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @concerts.each do |concert| %>
      <tr>
      <td><%= concert.fecha.strftime("%Y-%B-%A") %></td>
      <td><%= concert.asistentes %></td>
      <td><%= concert.duracion %></td>
        <td><%= concert.group.nombre %></td>
        <td><%= link_to 'Show', group_concert_path(@group, concert) %></td>
        <td><%= link_to 'Edit', edit_group_concert_path(@group, concert) %></td>
        <td><%= link_to 'Destroy', group_concert_path(@group, concert), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Concert', new_group_concert_path(@group) %>
